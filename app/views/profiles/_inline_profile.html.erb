<div id="<%= dom_id @user %>" class="w-full bg-slate-50 bg-opacity-25 border my-2 p-2 rounded-lg drop-shadow-xl">
  <div class="flex justify-between items-center">
    <div>
      <img class="inline-block h-14 w-14 mr-8 rounded-full" src="https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=256&h=256&q=80" alt="">
    </div>
    <span class="bold my-auto w-1/2 text-sm mr-auto">
      <%= @user.username || @user.email %>
    </span>
    <div class="inline-flex h-full">
      <%= button_to "View Profile", profile_path(@user), class:"py-1 px-1 mx-2 border my-auto text-xs w-20 bg-blue-400 hover:bg-blue-500 cursor-pointer rounded p-4" %>
    </div>
  </div>
</div>
