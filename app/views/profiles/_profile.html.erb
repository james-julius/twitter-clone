<div id="<%= dom_id user %>" class="w-full bg-slate-50 border my-2 p-2 rounded-lg drop-shadow-xl">
  <div class="flex justify-between items-center">
    <div>
      <img class="inline-block h-14 w-14 mr-8 rounded-full" src="https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=256&h=256&q=80" alt="">
    </div>
    <span class="bold my-auto w-1/2">
      <%= user.username || user.email %>
    </span>
    <div class="inline-flex h-full">
      <%= link_to "View Profile", profile_path(user), class:"p-2 border my-auto mr-2 w-30 bg-slate-200 hover:bg-slate-300 cursor-pointer rounded p-4" %>
      <% unless current_user.id == user.id %>
        <% if user.followers.any? { |u| u.id == current_user.id}  %>
          <%= button_to "Unfollow", follow_delete_path(id: user.id), remote: true, method: :delete, class:"p-2 border my-auto mr-2 w-30 bg-slate-200 hover:bg-slate-300 cursor-pointer rounded p-4" %>
        <% else %>
          <%= button_to "Follow", follow_path(id: user.id), remote: true, method: :post, class:"p-2 border my-auto mr-2 w-30 bg-slate-200 hover:bg-slate-300 cursor-pointer rounded p-4" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
