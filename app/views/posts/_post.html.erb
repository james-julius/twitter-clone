<div id="<%= dom_id post %>" class="flex w-full space-x-3 my-4 bg-slate-200 bg-opacity-50 drop-shadow-xl rounded-lg p-4">
  <img class="h-14 w-14 rounded-full" src="https://images.unsplash.com/photo-1517841905240-472988babdf9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=3&w=256&h=256&q=80" alt="">
  <div class="flex-col w-full">
    <div class="flex-1 w-full space-y-1">
      <a href="<%= profile_path(post.user.id) %>">
        <div class="flex items-center justify-between">
          <h3 class="text-sm font-medium"><%= post.user.username || 'No Username' %></h3>
          <p class="text-sm text-gray-500"><%= distance_of_time_in_words(Time.now, post.created_at)%> ago</p>
        </div>
      </a>
      <p class="py-2 text-sm text-gray-500">
        <%= post.content %>
      </p>
    </div>
    <div class="w-full inline-flex mt-4 items-center h-4">
      <p class="my-5 inline-flex">
        <%= button_to "#{post.likes || 0} likes ", method: :put, class: "text-sm font-medium mb-1" %>
        <svg class="h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
        </svg>
      </p>
      <%# <p class="my-5 ml-4 inline-flex items-center">
        <strong class="text-sm font-medium mb-1"><%= post.retweets || 0 retweets &nbsp;</strong>
    <%# </p> %>
    </div>
  </div>
  <% if action_name != "show" %>
    <%= link_to "View post", post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit post', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
